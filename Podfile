# Uncomment the next line to define a global platform for your project
 platform :ios, '13.0'

def share_pods
  pod 'HandyJSON'
  pod 'Kingfisher'
end

target 'LWMusic (iOS)' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  # Pods for LWMusic (iOS)
  share_pods
end

target 'LWMusic (macOS)' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  # Pods for LWMusic (macOS)
end

target 'LWMusicWidgetExtension' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  # Pods for LWMusicWidgetExtension
  share_pods
end
